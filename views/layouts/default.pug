doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		block header
			- var numbers = [1,2,3]
			for number in numbers
				b
					li= number
		block content
			.content
		block testing
			mixin article(title)
				.article
					.article-wrapper
						h1= title
						if block
							block
						else
							p No content provided

			+article('Hello world')

			+article('Hello world')
				p This is my
				p Amazing article

		mixin list(id, ...items)
			p= id
			ul(id=id)
				each item in items
					li= item

		+list('my-list', 1, 2, 3, 4)
